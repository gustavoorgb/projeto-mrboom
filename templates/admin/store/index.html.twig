{% extends 'layouts/base.html.twig' %}

{% block title %}Lojas
{% endblock %}

{% block breadcrumbs %}
	{% include 'components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'Dashboard', path: path('app_admin') },
            { label: 'Lojas' },
        ]
    } %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">Lojas</h1>
			<a href="{{ path('app_store_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
				<i class="fas fa-plus fa-sm text-white-50"></i>
				Cadastrar Nova Loja
			</a>
		</div>

		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Tabela de Lojas</h6>
			</div>
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
						<thead>
							<tr>
								<th>Id</th>
								<th>Cnpj</th>
								<th>Nome Corporativo</th>
								<th>Data de Fundação</th>
								<th>Ações</th>
							</tr>
						</thead>
						<tbody>
							{% for store in stores %}
								<tr>
									<td>{{ store.id }}</td>
									<td>{{ store.cnpj }}</td>
									<td>{{ store.corporateName }}</td>
									<td>{{ store.dtFoundation ? store.dtFoundation|date('Y-m-d') : 'N/A' }}</td>
									<td>
										<a href="{{ path('app_store_show', {'id': store.id}) }}" class="btn btn-sm btn-info">Detalhes</a>
										<a href="{{ path('app_store_edit', {'id': store.id}) }}" class="btn btn-sm btn-warning">Editar</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="6" class="text-center">Nenhum registro encontrado.</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
