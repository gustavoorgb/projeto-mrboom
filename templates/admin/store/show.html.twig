{% extends 'layouts/base.html.twig' %}

{% block title %}Detalhes da Loja
{% endblock %}

{% block breadcrumbs %}
	{% include 'components/_breadcrumb.html.twig' with {
        breadcrumbs: [
            { label: 'Dashboard', path: path('app_admin') },
            { label: 'Lojas', path: path('app_store_index') },
            { label: 'Detalhes'},
        ]
    } %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">Detalhes da Loja</h1>
			<a href="{{ path('app_store_index') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
				<i class="fas fa-list fa-sm text-white-50"></i>
				Listar Lojas
			</a>
		</div>

		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Informações da Loja</h6>
			</div>
			<div class="card-body">
				<table class="table table-bordered">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ store.id }}</td>
						</tr>
						<tr>
							<th>CNPJ</th>
							<td>{{ store.cnpj }}</td>
						</tr>
						<tr>
							<th>Razão Social</th>
							<td>{{ store.corporateName }}</td>
						</tr>
						<tr>
							<th>Data de Fundação</th>
							<td>{{ store.dtFoundation ? store.dtFoundation|date('Y-m-d') : 'N/A' }}</td>
						</tr>
					</tbody>
				</table>

				<hr class="my-4">

				<div class="d-flex justify-content-between">
					<a href="{{ path('app_store_edit', {'id': store.id}) }}" class="btn btn-warning">
						<i class="fas fa-edit fa-sm text-white-50"></i>
						Editar
					</a>

					{{ include('admin/store/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
