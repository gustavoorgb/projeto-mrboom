<form method="post" action="{{ path('app_store_delete', {'id': store.id}) }}" onsubmit="return confirm('Tem certeza que deseja excluir este item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ store.id) }}">
	<button class="btn btn-danger btn-sm" style="display: block;">Excluir</button>
</form>
