{{ form_start(form) }}
<div class="row">
	<div class="col-md-12 mb-3">
		<div class="form-group">
			{{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.email) }}
		</div>
	</div>

	<div class="col-md-6 mb-3">
		<div class="form-group">
			{{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.name) }}
		</div>
	</div>

	<div class="col-md-6 mb-3">
		<div class="form-group">
			{{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.phone) }}
		</div>
	</div>

	<div class="col-md-6 mb-3">
		<div class="form-group">
			{{ form_label(form.password.first, 'Senha', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.password.first) }}
		</div>
	</div>

	<div class="col-md-6 mb-3">
		<div class="form-group">
			{{ form_label(form.password.second, 'Confirmar Senha', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.password.second) }}
		</div>
	</div>
</div>

<div class="row">
	<div class="col-12 my-2">
		<div class="card shadow">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Pap√©is de Acesso</h6>
			</div>
			<div class="card-body">
				{{ form_errors(form.roles) }}
				<div class="row">
					{% for child in form.roles %}
						<div class="col-md-4 col-sm-6">
							<div class="form-check">
								{{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
								{{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>
<button type="submit" class="btn btn-primary mt-3">{{ button_label|default('Salvar') }}</button>
{{ form_end(form) }}
